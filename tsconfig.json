{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*"]
}
